<VirtualHost *:80>
    ServerName mirror.wmcloud.org
    UseCanonicalName Off

    DocumentRoot /public/dumps/public

    <Directory /public/dumps/public>
        Options Indexes FollowSymLinks
        AllowOverride None
        Order allow,deny
        Allow from all
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/mirror-error.log
    CustomLog ${APACHE_LOG_DIR}/mirror-access.log combined
</VirtualHost>
