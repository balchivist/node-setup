server {
    listen 80;
    listen [::]:80;

    server_name {{ mirror_server_name }};

    root {{ mirror_document_root }};

    location / {
        try_files $uri $uri/ /index.html;
        autoindex on;
        allow all;
    }

    error_log /var/log/nginx/mirror-error.log error;
    access_log /var/log/nginx/mirror-access.log combined;
}
